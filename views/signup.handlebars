<h2>Sign Up</h2>

<form class="form signup-form">
    <div class="form-group">
        <label for="name-login">name:</label>
        <input class="form-input" type="text" id="name-login" />
    </div>
    <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="email" id="email-login" />
    </div>
    <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
    </div>
    
    <div class="form-group">
        <button href="/" class="btn btn-primary" type="submit">Sign Up!</button>
    </div>
</form>

<script src="/js/signup.js"></script>